<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5pt"
    app:cardCornerRadius="4pt"
    android:layout_margin="4sp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5sp"
        android:orientation="vertical"
        android:padding="1pt"
        android:weightSum="100">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="67dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="333dp"
            android:layout_marginBottom="2dp"
            android:text="Momo"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.013" />

        <TextView
            android:id="@+id/tvCookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="30 min"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="339dp"
            android:layout_marginBottom="2dp"
            android:text="Ingrediants:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCookingTime"
            app:layout_constraintVertical_bias="0.076" />

        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="241dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="Meat, Floor, ewewe, wewew, wewewewe, ewewe,wewew, wewe, wewe, wewesdjsdsd,"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/ivThumbnail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="155dp"
            android:layout_height="104dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tvCookingTime"
            app:srcCompat="@drawable/recipe_momo" />

        <RatingBar
            android:id="@+id/rvRating"
            android:layout_width="238dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:numStars="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="224dp"
            android:text="Instruction:"
            app:layout_constraintEnd_toStartOf="@+id/ivThumbnail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIngredients" />

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="239dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:text="Cook for 15 minutes. Thenn boil fd ojsjdksjsjkjowr,s. sdo sdjskdskjs djksj jksdjksdsdjksdj skd"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/rvRating"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>