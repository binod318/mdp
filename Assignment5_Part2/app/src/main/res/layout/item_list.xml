<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5pt"
    app:cardCornerRadius="3pt"
    android:layout_marginVertical="2pt"
    >

    <LinearLayout
        android:id="@+id/llMain"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1pt"
        android:layout_marginVertical="5pt">


        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="281dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ipad" />

        <LinearLayout
            android:id="@+id/llDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="5"
                    android:src="@drawable/samsung_logo" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ipad" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:text="$400.0"
                    android:textAlignment="textEnd"
                    android:paddingRight="5pt"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="3pt"/>

            <TextView
                android:id="@+id/tvDesc"
                android:text="Ipad Pro 11 inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="3pt"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowRadius="10"
                android:background="@color/purple_200"
                android:text="Add" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>